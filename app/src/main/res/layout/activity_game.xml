<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="judicael.tige.mytopquiz.controleur.GameActivity">

    <TextView
        android:id="@+id/game_question_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question ?"
        android:textSize="30dp"
        android:gravity="center"
        android:padding="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#0976D4">
    </TextView>
    <Button
        android:id="@+id/game_answer1_btn"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:text="Answer1"
        />
    <Button
        android:id="@+id/game_answer2_btn"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:text="Answer2"
        />
    <Button
        android:id="@+id/game_answer3_btn"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:text="Answer3"
        />
    <Button
        android:id="@+id/game_answer4_btn"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:text="Answer4"
        />
</LinearLayout>